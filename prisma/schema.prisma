generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         String   @id @default(uuid())
  firstName  String
  lastName   String
  phone      String
  email      String   @unique
  password   String
  birthDate  DateTime @db.Date
  verified   Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model googleUser {
  id         String   @id @default(uuid())
  profile    Json?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
